<Window x:Class="GameOfLife.Save_name"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="Save_name" Height="150" Width="250">
    <StackPanel>
        <Label Content="Veuillez rentrer le nom de votre forme"></Label>
        <TextBox x:Name="name_of_form"/>
        <DockPanel>
            <Button x:Name="Save" Content="Save" Click="save_Click" Width="75" Margin="0, 10, 0, 0"/>
            <Button x:Name="stop" Content="Annuler" Click="stop_Click" Width="75" Margin="0, 10, 0, 0"/>
        </DockPanel>
    </StackPanel>
    
</Window>
